.order-container{
	background: #f2f2f2;
}
.order-item{
	background: white;
	margin-top:30rpx;
}
.order-info .order-pic{
	width: 200rpx; 
	height: 200rpx; 
	background-color: #eeeeee;
}
.order-shop{
  border-bottom: 1rpx solid #d0d0d0;
  line-height: 20pt;
  padding:10rpx 20rpx;
}
.product-info{
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	padding:30rpx;
  border-bottom: 1rpx solid #d0d0d0;

}
.product-info .order-left{
	width:230rpx;
	height: 150rpx;
}
.product-info .order-middle{
	width:520rpx;
	padding-left:20rpx;
	color:#323232;
}
.product-info .order-right{
	align-self: center;
	color:#323232;

}
.product-info .order-name{
	font-size: 14pt;
}
.product-info .order-price{
	font-size: 16pt;
  	color:#e64340;
  	margin:10rpx 0;
}
.product-info .order-time{
	font-size: 11pt;

}
.info-item{
	display:flex;
	justify-content: space-between;
	color:#353535;
	background: white;
  border-bottom: 1rpx solid #d0d0d0;
  padding:20rpx;
}
.info-item .info-item-left{
	font-size: 15pt;
	line-height: 35pt;
}
.info-item .info-item-right{
	display: flex;
	justify-content: flex-start;
	align-items: center;
	color:#888888;
	font-size:13pt;
}
.buy-minus,.buy-add{
	text-align: center;
	border:1px solid #d0d0d0;
	width:60rpx;
	height:60rpx;
	line-height: 60rpx;
}
.buy-amount{
	font-size: 12pt;
	line-height: 60rpx;
	text-align: center;
	border:1px solid #d0d0d0;
	width:80rpx;
	height:60rpx;
}
.price-wrap{
	margin-top:30rpx;
}
.info-item .info-item-right .confirm-price{
	font-size:17pt;
  color:#e64340;
}