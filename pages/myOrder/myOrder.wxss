.order-container{
	background: #f2f2f2;
}
.order-item{
	background: white;
	margin-top:30rpx;
}
.order-info .order-pic{
	width: 200rpx; 
	height: 200rpx; 
	background-color: #eeeeee;
}
.order-shop{
  border-bottom: 1rpx solid #d0d0d0;
  line-height: 20pt;
  padding:10rpx 20rpx;
}
.product-info{
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	padding:30rpx;
  border-bottom: 1rpx solid #d0d0d0;

}
.product-info .order-left{
	width:230rpx;
	height: 150rpx;
}
.product-info .order-middle{
	width:520rpx;
	padding-left:20rpx;
	color:#323232;
}
.product-info .order-right{
	align-self: center;
	color:#323232;

}
.product-info .order-name{
	font-size: 14pt;
}
.product-info .order-price{
	font-size: 16pt;
  	color:#e64340;
  	margin:10rpx 0;
}
.product-info .order-time{
	font-size: 11pt;

}